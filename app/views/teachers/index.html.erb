<main class="container">
  <br>
  <h1 class="centered">Teachers</h1>
  <br>
  <br>
  <table class="table">
    <thead class="thead" style="background-color: #3CABDB;">
      <tr class="font1">
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Age</th>
        <th scope="col">Salary</th>
        <th scope="col">Education</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @teachers.each do |teacher| %>
        <tr>
          <td class="font2" scope="row"><%= teacher.first_name %></td>
          <td class="font2" scope="row"><%= teacher.last_name %></td>
          <td class="font2" scope="row"><%= teacher.age %></td>
          <td class="font2" scope="row"><%= teacher.salary %></td>
          <td class="font2" scope="row"><%= teacher.education %></td>
          <td><%= link_to "<i data-feather='clipboard'></i>".html_safe, teacher %></td>
          <td><%= link_to "<i data-feather='edit'></i>".html_safe, edit_teacher_path(teacher) %></td>
          <td><%= link_to "<i data-feather='trash-2'></i>".html_safe, teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <button class="btn btn-lg btn-success btn-block" style="text-align: center;"><%= link_to 'New Teacher', new_teacher_path %></button>
    </div>
    <div class="col-sm">
    </div>
  </div>
</main>