<main class="container">
  <br>
  <h1 class="centered"><%= @teacher.first_name %> <%= @teacher.last_name %>'s File</h1>
  <br>
  <br>

  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <table class="sizing table">
        <thead style="background-color: #3CABDB;">
          <tr>
            <th scope="col">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Teacher Record</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th class="font1" scope="row"><strong>First name:</strong></th>
            <td class="data"><%= @teacher.first_name %></td>
          </tr>
          <tr>
            <th class="font1" scope="row"><strong>Last name:</strong></th>
            <td class="data"><%= @teacher.last_name %></td>
          </tr>
          <tr>
            <th class="font1" scope="row"><strong>Age:</strong></th>
            <td class="data"><%= @teacher.age %></td>
          </tr>
          <tr>
          <th class="font1" scope="row"><strong>Salary:</strong></th>
            <td class="data"><%= @teacher.salary %></td>
          </tr>
          <tr>
            <th class="font1" scope="row"><strong>Education:</strong></th>
            <td class="data"><%= @teacher.education %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm">
    </div>
  </div>


  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <button class="butt btn btn-success btn-block" style="text-align: center;"><%= link_to 'Edit', edit_teacher_path(@teacher) %></button>
      <button class="butt btn btn-success btn-block" style="text-align: center;"><%= link_to 'Back', teachers_path %></button>
    </div>
    <div class="col-sm">
    </div>
  </div>


</main>

