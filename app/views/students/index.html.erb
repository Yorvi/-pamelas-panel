<main class="container">
  <br>
  <h1 class="centered">Students</h1>
  <br>
  <br>
  <table class="table">
    <thead class="thead" style="background-color: #3CABDB;">
      <tr class="font1">
        <th scope="col">First name</th>
        <th scope="col">Last name</th>
        <th scope="col">Age</th>
        <th scope="col">Education</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td class="font2" scope="row"><%= student.first_name %></td>
          <td class="font2" scope="row"><%= student.last_name %></td>
          <td class="font2" scope="row"><%= student.age %></td>
          <td class="font2" scope="row"><%= student.education %></td>
          <td class="font2" scope="row"><%= link_to "<i data-feather='clipboard'></i>".html_safe, student %></td>
          <td class="font2" scope="row"><%= link_to "<i data-feather='edit'></i>".html_safe, edit_student_path(student) %></td>
          <td class="indent font2" scope="row"><%= link_to "<i data-feather='trash-2'></i>".html_safe, student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm">
      <button class="butt btn btn-lg btn-success btn-block" style="text-align: center;"><%= link_to 'New Student', new_student_path %></button>
    </div>
    <div class="col-sm">
    </div>
  </div>

</main>